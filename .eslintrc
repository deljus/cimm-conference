{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "rules": {
    "eqeqeq": "off",
    "curly": "error",
    "indent": ["error", 2],
    "object-shorthand": ["error", "always"]
  },
  "extends": "airbnb-base/legacy"
}
