extends ../loyouts/layout

block content
    .container-fluid
        main.col-12.py-5.pl-4.bd-content
            h2= title
            div.text-content!= body

block side-bar
    .sidebar-heading
        a.navbar-brand
            img(src="/images/logo.png" width="30" height="30" alt="")
            |   Cimm kpfu
    .list-group.list-group-flush
        each item in menu
            a.list-group-item.list-group-item-action(href=routePrefix + item.url)=item.title


block nav-bar
    nav.navbar.navbar-dark.bg-primary
        button#menu-toggle.btn
            span.navbar-toggler-icon
        form.form-inline
            if admin
                a.btn.btn-primary(href=routePrefix + outsideRouters.users, role='button', aria-pressed='true') Users
                a.btn.btn-primary(href=routePrefix + insideRoutes.admin.page.list, role='button', aria-pressed='true') Create pages
            if auth
                a.btn.btn-primary(href=routePrefix + outsideRouters.profile, role='button', aria-pressed='true') Profile
                a.btn.btn-primary(href=routePrefix + insideRoutes.thesis.list) Thesis
                a.btn.btn-primary(href=routePrefix + outsideRouters.logout, role='button', aria-pressed='true') Logout
            else
                a.btn.btn-primary(href=routePrefix + outsideRouters.registration, role='button', aria-pressed='true') Registration
                a.btn.btn-primary(href=routePrefix + outsideRouters.login, role='button', aria-pressed='true') Login
